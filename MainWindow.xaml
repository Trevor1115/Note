<Window x:Class="Note.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Note"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF10D813">
        <Button x:Name="btnOpen" Content="開啟檔案" HorizontalAlignment="Left" Height="38" Margin="10,10,0,0" VerticalAlignment="Top" Width="81" FontSize="16"/>
        <Button x:Name="btnSave" Content="存檔" HorizontalAlignment="Left" Height="38" Margin="107,10,0,0" VerticalAlignment="Top" Width="81" FontSize="16"/>
        <RichTextBox x:Name="rtbText" HorizontalAlignment="Center" Height="372" Margin="0,53,0,0" VerticalAlignment="Top" Width="780">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
